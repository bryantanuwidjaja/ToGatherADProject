<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_LobbyListLayout_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLength="50"
        android:text="Location" />

    <TextView
        android:id="@+id/textView_LobbyListLayout_hostID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_LobbyListLayout_location"
        android:maxLength="20"
        android:text="Host ID" />

    <TextView
        android:id="@+id/textView_LobbyListLayout_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_LobbyListLayout_hostID"
        android:maxLength="15"
        android:text="Activity" />
</RelativeLayout>