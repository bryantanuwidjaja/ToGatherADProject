<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_LobbyListLayout_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLength="50"
        android:text="Location"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_LobbyListLayout_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_LobbyListLayout_location"
        android:maxLength="20"
        android:text="Capacity"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_LobbyListLayout_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_LobbyListLayout_capacity"
        android:maxLength="15"
        android:text="Activity"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView_LobbyListLayout_descriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_LobbyListLayout_activity"
        android:text="Descriptions"
        android:textColor="#000000"
        android:textSize="16sp" />
</RelativeLayout>